{
  "name": "trolly",
  "version": "0.0.4",
  "description": "Isomorphic boilerplate for creating libraries. Using Babel 6.x, Webpack, Karma and ESLint",
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-core": "^5.8.23",
    "babel-loader": "^5.3.2",
    "chai": "^3.4.0",
    "eslint": "^1.8.0",
    "eslint-loader": "^1.0.0",
    "eslint-plugin-react": "^3.3.1",
    "eslint-plugin-babel": "^2.1.1",
    "eslint-plugin-mocha": "^1.0.0",
    "http-server": "^0.8.0",
    "isparta-loader": "^1.0.0",
    "karma": "^0.13.14",
    "karma-sinon": "^1.0.4",
    "karma-sinon-chai": "^1.0.0",
    "karma-coverage": "^0.5.0",
    "karma-cli": "^0.1.1",
    "karma-mocha": "^0.2.0",
	"karma-babel-preprocessor": "^6.0.1",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-firefox-launcher": "^0.1.6",
    "karma-chrome-launcher": "^0.2.0",
"karma-chai": "^0.1.0",    
"karma-webpack": "^1.7.0",
    "karma-sourcemap-loader": "^0.3.5",
    "mocha": "^2.3.3",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.12.1",
	"pre-commit": "^1.1.2",
	"rimraf": "^2.4.3",
    "npm-check-updates": "^2.2.0",
    "npm-shrinkwrap": "^200.4.0",
	"phantomjs": "^1.9.18",
    "sinon": "^1.16.1",
    "sinon-chai": "^2.8.0",
	"lodash": "^3.10.1"
	
  },
  "scripts": {
    "browse": "open http://localhost:5001",
    "build": "webpack",
    "clean": "rm -fr tmp/coverage/javascript/* && rm -fr dist/*",
    "dev-server": "node webpack-dev-server.js",
    "start": "http-server -p 5001",
    "coverage": "karma start karma.conf.js",
	"lint": "eslint src",
	"prebuild": "rimraf ./dist",
    "test": "karma start",
	"test:browser": "karma start --single-run",
    "packages": "npm list --depth=0",
    "package:purge": "rm -rf node_modules",
    "package:reinstall": "npm run package:purge && npm install",
    "package:updates": "./node_modules/.bin/ncu",
    "package:upgrade": "npm run package:updates -u",
	
    "karma": "karma start",
    "karma:server": "npm run karma -- --browsers=PhantomJS",
    "karma:watch": "npm run karma -- --auto-watch --no-single-run",
	
	"spec": "mocha ./__tests__/**/*.spec.js --reporter spec --timeout 15000 --bail --require ./__tests__/_lib/bootstrap.js",
	"spec:watch": "npm run spec -- -w"
	
  },
  "pre-commit": [
    "test",
    "test:browser",
    "build"
  ],
 "repository": {
    "type": "git",
    "url": "https://github.com/kflash/trolly.git"
  },
  "keywords": [
    "Webpack",
    "boilerplate",
    "node",
    "karma",
    "mocha",
    "chai",
    "eslint",
    "isparta",
    "es2015",
    "es6"
  ],
 "author": "Kenny Flashlight",
  "license": "MIT",
 "bugs": "https://github.com/kflash/trolly/issues",
  "homepage": "https://github.com/kflash/trolly"
}
